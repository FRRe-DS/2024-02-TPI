---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <main>
        <section class="container-title">
            <div class="container-title-evento">
                <h1 id="nombre-evento"></h1>
            </div>

            <div id="left2"></div>
            <div id="right2"></div>
        </section>

        <div class="wrapped2">
            <div class="center" id="loading-indicator">
                <div class="loading-wave">
                    <div class="loading-bar"></div>
                    <div class="loading-bar"></div>
                    <div class="loading-bar"></div>
                    <div class="loading-bar"></div>
                </div>
            </div>

            <div class="section-certamen pad-bottom-36">
                <section class="detalle-evento">
                    <div class="h2-mas-p">
                        <div class="gap-20">
                            <div>
                                <h1 id="nombre-escultor" class="titulo"></h1>
                                <div class="divider-sm"></div>
                            </div>
                            <div>
                                <h3 id="pais" class="cursiva subtitulo"></h3>
                                <p
                                    class="text-pretty"
                                    id="descripcion-escultor"
                                >
                                </p>
                            </div>
                        </div>
                        <div class="gap-20">
                            <div>
                                <h2 class="subtitulo">Proyecto</h2>
                                <div class="divider-sm"></div>
                            </div>
                            <div>
                                <h3
                                    id="nombre-escultura"
                                    class="cursiva subtitulo"
                                >
                                </h3>
                                <p
                                    class="text-pretty"
                                    id="descripcion-escultura"
                                >
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="imagen-evento">
                        <img id="imagen-evento" />
                    </div>
                </section>
                <section class="galeria-progreso-escultor">
                    <div>
                        <h2 class="subtitulo">Galería de imagenes</h2>
                        <div class="divider-sm"></div>
                    </div>
                    <div class="galeria"></div>
                </section>

                <div class="recuadroV2" id="showCalificacion">
                    <h3>¡Gracias por votar!</h3>
                    <div class="calificacion-V2" id="showPuntaje"></div>
                </div>
                <div class="formulario-voto recuadro" id="showVotarForm">
                    <h3>Califica a <span id="nombre-escultor"></span></h3>
                    <p class="parrafo-gris">
                        Los votos de todos los escultores se contabilizarán para
                        obtener al ganador del certamen
                    </p>

                    <form id="ratingForm" method="POST">
                        <div class="rating">
                            <input
                                value="5"
                                name="rating"
                                id="star5"
                                type="radio"
                            />
                            <label for="star5"></label>

                            <input
                                value="4"
                                name="rating"
                                id="star4"
                                type="radio"
                            />
                            <label for="star4"></label>

                            <input
                                value="3"
                                name="rating"
                                id="star3"
                                type="radio"
                            />
                            <label for="star3"></label>

                            <input
                                value="2"
                                name="rating"
                                id="star2"
                                type="radio"
                            />
                            <label for="star2"></label>

                            <input
                                value="1"
                                name="rating"
                                id="star1"
                                type="radio"
                            />
                            <label for="star1"></label>
                        </div>

                        <button
                            type="submit"
                            class="btn-secundarioV2 pad-inline">Votar</button
                        >
                    </form>
                </div>

                <a class="btn-secundarioV2 pad-inline" id="btnVotar">Votar</a>
            </div>
        </div>
    </main>
</Layout>

<script src="../scripts/detalle_escultor.ts"></script>
