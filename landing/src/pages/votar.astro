---
import Layout from "../layouts/Layout.astro";

const { searchParams } = Astro.url;
const escultor_id = searchParams.get("escultor_id");
const correo = searchParams.get("correo");
---

<Layout>
    <section class="hero-section">
        <section id="up"></section>
        <section id="down"></section>
        <section id="left"></section>
        <section id="right"></section>
        <div class="pantalla-completa">
            <article class="container-votar">
                <div class="formulario-voto">
                    <h1>Califica a <span id="nombre-escultor"></span></h1>
                    <p>
                        Los votos de todos los escultores se contabilizar√°n para
                        obtener al ganador del certamen
                    </p>

                    <form
                        id="ratingForm"
                        method="POST"
                        action="/ruta-a-tu-endpoint"
                    >
                        <div class="rating">
                            <input
                                value="5"
                                name="rating"
                                id="star5"
                                type="radio"
                            />
                            <label for="star5"></label>

                            <input
                                value="4"
                                name="rating"
                                id="star4"
                                type="radio"
                            />
                            <label for="star4"></label>

                            <input
                                value="3"
                                name="rating"
                                id="star3"
                                type="radio"
                            />
                            <label for="star3"></label>

                            <input
                                value="2"
                                name="rating"
                                id="star2"
                                type="radio"
                            />
                            <label for="star2"></label>

                            <input
                                value="1"
                                name="rating"
                                id="star1"
                                type="radio"
                            />
                            <label for="star1"></label>
                        </div>

                        <button type="submit" class="btn-votarV2"
                            >Votar
                        </button>
                    </form>
                </div>
                <img id="img_escultor" />
            </article>
        </div>
    </section>
</Layout>

<script src="../scripts/votar.ts"></script>
